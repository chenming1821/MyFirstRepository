<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.heheda.zhbj.view.noScroolViewpager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RadioGroup

        android:id="@+id/radio_group_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton


            android:id="@+id/radiobtn_home"
            style="@style/radiobtn_bottom_tag_styles"
            android:drawableTop="@drawable/home_tag_selector"
            android:text="主页"

            />

        <RadioButton


            android:id="@+id/radiobtn_news"
            style="@style/radiobtn_bottom_tag_styles"

            android:drawableTop="@drawable/news_tag_selector"
            android:text="新闻"

            />


        <RadioButton

            android:id="@+id/radiobtn_smart"
            style="@style/radiobtn_bottom_tag_styles"
            android:drawableTop="@drawable/smartservice_tag_selector"
            android:text="智慧"

            />

        <RadioButton

            android:id="@+id/radiobtn_govern"
            style="@style/radiobtn_bottom_tag_styles"
            android:drawableTop="@drawable/govaf_tag_selector"
            android:text="政务"

            />

        <RadioButton

            android:id="@+id/radiobtn_settings"
            style="@style/radiobtn_bottom_tag_styles"
            android:drawableTop="@drawable/setting_tag_selector"
            android:text="设置"

            />


    </RadioGroup>


</LinearLayout>